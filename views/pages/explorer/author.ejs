<%- include('../partials/header.ejs') %>
    <div class="container my-5">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div>
                    <div>
                        <img src="<%= author.profilePics %> " class="img-thumbnail img-fluid" alt="">
                    </div>
                    <div class="mt-3">
                        <p>
                            Name: <strong>
                                <%= author.profile.name %>
                            </strong>
                        </p>
                        <p>
                            Title: <strong>
                                <%= author.profile.title %>
                            </strong>
                        </p>
                        <p>
                            Bio:
                            <%= author.profile.bio %>
                        </p>

                        <div class="d-flex">
                            <p class="mr-3">Social Links:</p>
                            <% if (author.profile.links.facebook) { %>
                                <span class="mr-3">
                                    <a href="<%= author.profile.links.facebook %> " target="_blank">
                                        <i class="fab fa-facebook-square"></i>
                                    </a>
                                </span>

                                <% } %>
                                    <% if (author.profile.links.twitter) { %>
                                        <span class="mr-3">
                                            <a href="<%= author.profile.links.twitter %> " target="_blank">
                                                <i class="fab fa-twitter-square"></i>

                                            </a>
                                        </span>

                                        <% } %>
                                            <% if (author.profile.links.linkedin) { %>
                                                <span class="mr-3">
                                                    <a href="<%= author.profile.links.linkedin %> " target="_blank">
                                                        <i class="fa-brands fa-linkedin"></i>

                                                    </a>
                                                </span>

                                                <% } %>
                                                    <% if (author.profile.links.website) { %>
                                                        <span class="mr-3">
                                                            <a href="<%= author.profile.links.website %> "
                                                                target="_blank">
                                                                <i class="fab fa-internet-explorer"></i>
                                                            </a>
                                                        </span>

                                                        <% } %>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <%- include('../partials/footer.ejs') %>

        </body>

        </html>
